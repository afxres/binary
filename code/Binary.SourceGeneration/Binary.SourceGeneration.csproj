<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Mikodev.Binary.SourceGeneration</AssemblyName>
    <RootNamespace>Mikodev.Binary.SourceGeneration</RootNamespace>
    <LangVersion>preview</LangVersion>
    <Copyright>Mikodev $([System.DateTime]::Now.ToString('yyyy'))</Copyright>
    <Authors>Mikodev</Authors>
    <Company>Mikodev</Company>
    <Product>Mikodev.Binary</Product>
    <Version>5.6.0-beta.5</Version>
    <IsRoslynComponent>true</IsRoslynComponent>
    <AnalyzerLanguage>cs</AnalyzerLanguage>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.7.0" />
  </ItemGroup>

</Project>
